# Application Configuration
APP_NAME=ScooterMap
DEBUG=True

# Kafka/Redpanda Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=gbfs.raw
KAFKA_TOPIC_AGGREGATED=gbfs.aggregated
KAFKA_CONSUMER_GROUP=h3-aggregator

# GBFS Data Source
GBFS_URL=https://gbfs.api.ridedott.com/public/v2/aachen/free_bike_status.json
GBFS_FETCH_INTERVAL=60

# Geographic Boundaries (Aachen Core Metropolitan Area)
MIN_LATITUDE=50.72
MAX_LATITUDE=50.82
MIN_LONGITUDE=6.03
MAX_LONGITUDE=6.14

# DuckDB Configuration
DUCKDB_PATH=data/mobility.duckdb

# H3 Configuration (comma-separated resolutions)
H3_RESOLUTIONS=[9,8,7,6]
H3_DEFAULT_RESOLUTION=8

# Sliding Window Configuration
WINDOW_SIZE_MINUTES=5
RETENTION_MINUTES=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
